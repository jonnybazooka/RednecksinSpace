<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MinerSetup">

    <Button
            android:text="@string/button_create_miner"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/submitMiner"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView18"
            android:visibility="visible"
            android:textSize="18sp" android:onClick="createMiner"/>
    <TextView
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:id="@+id/minersWages"
            android:textAlignment="center" android:textSize="18sp"
            android:textStyle="bold" android:visibility="visible"
            app:layout_constraintStart_toEndOf="@+id/textView18"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/minersFoodReq"/>
    <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:id="@+id/textView18"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:text="@string/miners_wages" android:textSize="18sp" android:textAlignment="textStart"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView17"/>
    <TextView
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:id="@+id/minersFoodReq"
            android:textAlignment="center" android:textSize="18sp"
            android:textStyle="bold" android:visibility="visible"
            app:layout_constraintStart_toEndOf="@+id/textView17"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/minersBrainSkill"/>
    <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/textView17"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:text="@string/miners_food_req" android:textSize="16sp" android:textAlignment="textStart"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/seekBarMinerBrain" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <TextView
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:id="@+id/minersBrainSkill"
            android:textAlignment="center" android:textSize="18sp"
            android:textStyle="bold" android:visibility="visible"
            app:layout_constraintStart_toEndOf="@+id/seekBarMinerBrain"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView16"/>
    <SeekBar
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/seekBarMinerBrain" android:max="200"
            android:visibility="visible"
            android:progress="0" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView16" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <TextView
            android:layout_width="265dp"
            android:layout_height="30dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:id="@+id/textView16" android:text="@string/miners_brain_skill"
            android:textAppearance="@android:style/TextAppearance.Material.Medium" android:textAlignment="textStart"
            android:textSize="18sp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/seekBarMinerMining"/>
    <TextView
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:id="@+id/minersMiningSkill"
            android:textAlignment="center" android:textSize="18sp"
            android:textStyle="bold" android:visibility="visible"
            app:layout_constraintStart_toEndOf="@+id/seekBarMinerMining"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView15"/>
    <TextView
            android:layout_width="265dp"
            android:layout_height="30dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:id="@+id/textView15" android:text="@string/miners_mining_skill"
            android:textAppearance="@android:style/TextAppearance.Material.Medium" android:textAlignment="textStart"
            android:textSize="18sp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView14"/>
    <SeekBar
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/seekBarMinerMining" android:max="300"
            android:visibility="visible"
            android:progress="0"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView15"/>
    <TextView
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:id="@+id/minerFarmingSkill"
            android:textAlignment="center" android:textSize="18sp"
            android:textStyle="bold" android:visibility="visible"
            app:layout_constraintStart_toEndOf="@+id/textView14"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView13"/>
    <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:id="@+id/textView14"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:text="@string/miners_farming_skill" android:textSize="18sp" android:textAlignment="textStart"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView13"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:id="@+id/textView13" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:text="@string/miners_creator"
            android:textAppearance="@android:style/TextAppearance.Material.Medium" android:textSize="24sp"
            android:textAlignment="center"/>
</android.support.constraint.ConstraintLayout>