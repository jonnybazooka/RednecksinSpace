<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".WorkerSetup">

    <TextView
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:id="@+id/farmerWagesReq"
            android:textAlignment="center" android:textSize="18sp"
            android:textStyle="bold" android:visibility="visible"
            app:layout_constraintStart_toEndOf="@+id/textView8"
            android:layout_marginStart="20dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/farmerFoodReq"/>
    <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:id="@+id/textView8"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:text="@string/farmers_pay" android:textSize="18sp" android:textAlignment="textStart"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView6"/>
    <TextView
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:id="@+id/farmerFoodReq"
            android:textAlignment="center" android:textSize="18sp"
            android:textStyle="bold" android:visibility="visible"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            android:layout_marginStart="20dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/farmerBrainSkill"/>
    <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:id="@+id/textView6"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:text="@string/farmer_food_req" android:textSize="16sp" android:textAlignment="textStart"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/seekBarFarmerBrain"/>
    <TextView
            android:layout_width="265dp"
            android:layout_height="30dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:id="@+id/textView5" android:text="@string/farmers_brain_power"
            android:textAppearance="@android:style/TextAppearance.Material.Medium" android:textAlignment="textStart"
            android:textSize="18sp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"/>
    <TextView
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:id="@+id/farmerBrainSkill"
            android:textAlignment="center" android:textSize="18sp"
            android:textStyle="bold" android:visibility="visible"
            app:layout_constraintStart_toEndOf="@+id/seekBarFarmerBrain"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView5"/>
    <SeekBar
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/seekBarFarmerBrain" android:max="200" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:visibility="visible"
            android:progress="0" android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView5"/>
    <TextView
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:id="@+id/farmersMineralSkill"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            android:layout_marginStart="20dp" android:textAlignment="center" android:textSize="18sp"
            android:textStyle="bold" android:visibility="visible" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/farmerFarmingSkill"/>
    <SeekBar
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/seekBarFarmerFarming" android:max="300" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:visibility="visible"
            android:progress="0" android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView2"/>
    <TextView
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:id="@+id/farmerFarmingSkill"
            app:layout_constraintStart_toEndOf="@+id/seekBarFarmerFarming"
            android:layout_marginStart="20dp" android:textAlignment="center" android:textSize="18sp"
            android:textStyle="bold" android:visibility="visible" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"/>
    <TextView
            android:layout_width="265dp"
            android:layout_height="30dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            android:layout_marginStart="16dp" android:id="@+id/textView2" android:text="@string/farming_skill"
            android:textAppearance="@android:style/TextAppearance.Material.Medium" android:textAlignment="textStart"
            android:textSize="18sp" app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:id="@+id/textView3" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:text="@string/farmer_creator"
            android:textAppearance="@android:style/TextAppearance.Material.Medium" android:textSize="24sp"
            android:textAlignment="center"/>
    <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:id="@+id/textView4" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/seekBarFarmerFarming"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:text="@string/farmers_mineral_skill" android:textSize="18sp" android:textAlignment="textStart"/>
    <Button
            android:text="@string/button_create_farmer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/submitFarmer"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            style="@android:style/Widget.Button"
            android:visibility="visible"
            android:textSize="18sp" android:onClick="createFarmer" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView8"/>
</android.support.constraint.ConstraintLayout>