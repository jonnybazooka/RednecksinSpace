<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SlaveSetup">

    <Button
            android:text="@string/button_submit_slave"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/submitSlave"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:visibility="visible"
            android:textSize="18sp" android:onClick="createSlave" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView24"/>
    <TextView
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:id="@+id/slavesWages"
            android:textAlignment="center" android:textSize="18sp"
            android:textStyle="bold" android:visibility="visible"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/slavesFoodReq"
            app:layout_constraintStart_toEndOf="@+id/textView24" android:layout_marginStart="20dp"/>
    <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:id="@+id/textView24"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:text="@string/slaves_wages" android:textSize="18sp" android:textAlignment="textStart"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView23"/>
    <TextView
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:id="@+id/slavesFoodReq"
            android:textAlignment="center" android:textSize="18sp"
            android:textStyle="bold" android:visibility="visible"
            app:layout_constraintStart_toEndOf="@+id/textView23"
            android:layout_marginStart="20dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/slavesBrainSkill"/>
    <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:id="@+id/textView23"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:text="@string/slaves_food_req" android:textSize="18sp" android:textAlignment="textStart"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/seekBarSlaveBrain"/>
    <TextView
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:id="@+id/slavesBrainSkill"
            android:textAlignment="center" android:textSize="18sp"
            android:textStyle="bold" android:visibility="visible"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView22"
            app:layout_constraintStart_toEndOf="@+id/seekBarSlaveBrain" android:layout_marginStart="20dp"/>
    <SeekBar
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/seekBarSlaveBrain" android:max="100"
            android:visibility="visible"
            android:progress="0"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView22"/>
    <TextView
            android:layout_width="265dp"
            android:layout_height="30dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:id="@+id/textView22" android:text="@string/slaves_brain_skill"
            android:textAppearance="@android:style/TextAppearance.Material.Medium" android:textAlignment="textStart"
            android:textSize="18sp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/seekBarSlaveMining"/>
    <TextView
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:id="@+id/slavesMiningSkill"
            android:textAlignment="center" android:textSize="18sp"
            android:textStyle="bold" android:visibility="visible"
            app:layout_constraintStart_toEndOf="@+id/seekBarSlaveMining" android:layout_marginStart="20dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView21"/>
    <SeekBar
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/seekBarSlaveMining" android:max="200"
            android:visibility="visible"
            android:progress="0"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView21"/>
    <TextView
            android:layout_width="265dp"
            android:layout_height="30dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:id="@+id/textView21" android:text="@string/slaves_mining_skill"
            android:textAppearance="@android:style/TextAppearance.Material.Medium" android:textAlignment="textStart"
            android:textSize="18sp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/seekBarSlaveFarming"/>
    <TextView
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:id="@+id/slavesFarmingSkill"
            android:textAlignment="center" android:textSize="18sp"
            android:textStyle="bold" android:visibility="visible"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView20"
            app:layout_constraintStart_toEndOf="@+id/seekBarSlaveFarming" android:layout_marginStart="20dp"/>
    <SeekBar
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/seekBarSlaveFarming" android:max="200"
            android:visibility="visible"
            android:progress="0"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView20"/>
    <TextView
            android:layout_width="265dp"
            android:layout_height="30dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:id="@+id/textView20" android:text="@string/slaves_farming_skill"
            android:textAppearance="@android:style/TextAppearance.Material.Medium" android:textAlignment="textStart"
            android:textSize="18sp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView19"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:id="@+id/textView19" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:text="@string/slaves_creator"
            android:textAppearance="@android:style/TextAppearance.Material.Medium" android:textSize="24sp"
            android:textAlignment="center"/>
</android.support.constraint.ConstraintLayout>